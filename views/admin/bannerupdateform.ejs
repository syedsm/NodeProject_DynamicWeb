            <div class="container">
                <div class="row">
                    <%- include('../../partials/admin/left.ejs') %>

                        <div class="col-md-8">
                            <h2>Banner Update Form</h2>
                            <form action="" method="post" enctype="multipart/form-data">
                                <label for="">Title</label>
